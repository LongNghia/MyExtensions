{
   "browser_action": {
      "default_icon": {
         "128": "./icon/icons8-open-100-color.png"
      },
      "default_title": "Open selected in new tab"
   },

   "name": "Open Selected",
   "short_name": "openselected",
   "description": "An extension to open selected in new tab",
   "icons": {
      "128": "./icon/icons8-open-100-color.png"
   },
   "homepage_url": "https://github.com/LongNghia/MyExtensions/tree/main/OpenSelected",
   "permissions": ["tabs", "*://*/*"],

   "content_scripts": [{
      "js": ["./js/content.js"],
      "matches": ["*://*/*"],
      "run_at": "document_start"
   }],

   "options_page": "./html/option.html",

   "background": {
      "scripts": ["js/background.js"]
   },
   "version": "1.0.0",
   "default_locale": "en",
   "author": "longnghia",
   "manifest_version": 2,
   "commands": {
      "open-in-bg": {
         "suggested_key": {
            "default": "Ctrl+Q"
         },
         "description": "open selected in new tab"
      },
      "open-in-newtab": {
         "suggested_key": {
            "default": "Ctrl+Shift+Q"
         },
         "description": "open selected in current tab"
      }
   }
}